<?php
include "/var/www/html/api-server/pdos/DatabasePdo.php";

// UPDATE
$pdo = pdoSqlConnect();
for($i=1; $i<=24; $i++){
    $randomNum = mt_rand(1,4);
    $query = "update hour_forecast set current_grade=$randomNum where no = $i;";
    $st = $pdo->prepare($query);
    $st->execute([]);
}
$st = null;
$pdo = null;

?>